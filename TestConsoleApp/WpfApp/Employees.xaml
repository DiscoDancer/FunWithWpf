<Page x:Class="WpfApp.Employees"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d"
      Title="Employees" Height="480" Width="786.814">

    <Grid Margin="0,0,-69,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Width="70" Content="Add" HorizontalAlignment="Left" Margin="27,-3,0,0" Height="19" VerticalAlignment="Top" x:Name="AddBtn"/>
        <Grid Grid.RowSpan="2" Margin="0,0,69.8,0.2">
            <DataGrid x:Name="EmployeeDataGrid" IsReadOnly="True" Height="450" VerticalAlignment="Top" AutoGenerateColumns="False" ItemsSource="{Binding}" Margin="26,20,-21.8,-24.6">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding EmployeeID}" Width="80" Header="Employee ID"/>
                    <DataGridTextColumn Binding="{Binding LastName}" Width="85" Header="Last Name"/>
                    <DataGridTextColumn Binding="{Binding FirstName}" Width="85" Header="First Name"/>
                    <DataGridTextColumn Binding="{Binding MiddleName}" Width="90" Header="Middle Name"/>
                    <DataGridTextColumn Binding="{Binding Position}" Width="150" Header="Position"/>
                    <DataGridTextColumn Binding="{Binding Salary}" Width="80" Header="Salary"/>
                    <DataGridTextColumn Binding="{Binding Phone}" Width="130" Header="Phone"/>
                    <!--<DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Button Content="Delete" Tag="{Binding Path=id_Del_Employees}"></Button>
                                    <Button Content="Change" Tag="{Binding Path=id_Change_Employees}"></Button>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>-->
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Page>
