<Page x:Class="namespace.Customers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp"
      mc:Ignorable="d"
      Title="Customers" Height="450" Width="570">

    <Grid>
        <Border Name="border" BorderBrush="Black" BorderThickness="1">
            <DataGrid x:Name="CustomerDataGrid" Height="450" VerticalAlignment="Top" AutoGenerateColumns="False" ItemsSource="{Binding}" Margin="0,0,0.2,0">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding EmployeeID}" Width="75" Header="Customer ID" IsReadOnly="True" />
                <DataGridTextColumn Binding="{Binding LastName}" Width="70" Header="Last Name"/>
                <DataGridTextColumn Binding="{Binding MiddleName}" Width="85" Header="Middle Name"/>
                <DataGridTextColumn Binding="{Binding FirstName}" Width="70" Header="First Name"/>
                <DataGridTextColumn Binding="{Binding City}" Width="70" Header="City"/>
                <DataGridTextColumn Binding="{Binding Address}" Width="100" Header="Address"/>
                <DataGridTextColumn Binding="{Binding Phone}" Width="100" Header="Phone"/>
            </DataGrid.Columns>
        </DataGrid>
            </Border>
    </Grid>
</Page>
